@page
@model sample_1.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Page";
}
<head>
    <link rel="stylesheet" href="~/css/Contact.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
</head>
<div class="container">
    <h2>CONTACT US</h2>
    <br />
    <h4>Address</h4>
    <p>East Tambaram, Tambaram, Chennai, Tamil Nadu 600059.</p>
    <div id="map" style="width: 100%; height: 400px;"></div>
    <br />
    <h4>Phone Number</h4>
    <p>044 2239 0675</p>

    <h4>E-Mail Address</h4>
    <p>mcc.edu.in</p>
    <br />

    <p>If you have any questions, feel free to reach out to us by filling out the form below:</p>
    <div class="contact-form">
        <form method="post">
            <div class="form-group">
                <label for="name">Your Name:</label>
                <input type="text" id="name" name="Name" class="input-text" required />
            </div>

            <div class="form-group">
                <label for="email">Your Email:</label>
                <input type="email" id="email" name="Email" class="input-text" required />
            </div>

            <div class="form-group">
                <label for="subject">Class & Department:</label>
                <input type="text" id="subject" name="Subject" class="input-text" required />
            </div>

            <div class="form-group">
                <label for="message">Message:</label>
                <textarea id="message" name="Message" class="input-text" rows="5"></textarea>
            </div>

            <button type="submit" class="btn">Send Message</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        var map = L.map('map').setView([12.921188, 80.122062], 15); 
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {}).addTo(map);
        var marker = L.marker([12.921188, 80.122062]).addTo(map);
        marker.bindPopup("<b>Hello!</b><br>Welcome to Madras Christian College.").openPopup();
    </script>
}
